        },
        "height": {
          "$ref": "app:vtex.store-video#/definitions/Video/properties/height"
        },
        "autoPlay": {
          "$ref": "app:vtex.store-video#/definitions/Video/properties/autoPlay"
        },
        "loop": {
          "$ref": "app:vtex.store-video#/definitions/Video/properties/loop"
        },
